{
  "layer": "top",
  "position": "top",

  "modules-left": ["group/session", "hyprland/workspaces", "hyprland/window"],
  "modules-center": ["clock"],
  "modules-right": ["tray", "battery", "custom/notifications"],

  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": true,
    "all-outputs": false,
    "format": "{}",
    "format-icons": {
      "urgent": "ï±",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 5
    }
  },

  "hyprland/window": {
    "format": "{class}",
    "rewrite": {
      "(.*) - zsh": "> [$1]"
    }
  },

  "clock": {
    "format": "ï³  {:%d %b %Y  ï€—  %I:%M %p}",
    "interval": 60,
    "tooltip": false
  },

  "group/session": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": true
    },
    "modules": [
      "custom/session-lock",
      "custom/session-logout",
      "custom/session-reboot",
      "custom/session-poweroff"
    ]
  },

  "custom/session-lock": {
    "format": "<span font_desc='MesloLGS Nerd Font'>ï€£</span>",
    "on-click": "hyprlock",
    "tooltip": false
  },

  "custom/session-logout": {
    "format": "<span font_desc='Font Awesome 6 Free'>ï‚‹</span>",
    "on-click": "hyprctl dispatch exit",
    "tooltip": false
  },

  "custom/session-reboot": {
    "format": "<span font_desc='Noto Color Emoji'>ğŸ”„</span>",
    "on-click": "systemctl reboot",
    "tooltip": false
  },

  "custom/session-poweroff": {
    "format": "ï€‘",
    "on-click": "systemctl poweroff",
    "tooltip": false
  },

  "tray": {
    "icon-size": 18,
    "spacing": 10
  },

  "battery": {
    "format": "{icon}",
    "interval": 10,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format-charging": "ïƒ§",
    "format-plugged": "ï‡¦",
    "format-discharging": "{icon}",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
    "tooltip": true,
